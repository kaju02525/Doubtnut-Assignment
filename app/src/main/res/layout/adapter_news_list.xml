<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_line"
    android:layout_marginTop="@dimen/margin_line"
    android:layout_marginStart="@dimen/margin_line"
    android:layout_marginBottom="@dimen/margin_line">

    <ImageView
        android:layout_marginTop="@dimen/view_margin"
        android:id="@+id/iv_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:transitionName="iv_news"
        android:scaleType="matrix"
        app:layout_constraintHeight_min="100dp"
        app:layout_constraintWidth_min="100dp"
        android:background="@drawable/no_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="@dimen/margin_line"
        android:id="@+id/tv_title"
        android:transitionName="tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="ADDRESS SECT1E News Bangalore"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toRightOf="@+id/iv_news"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="@dimen/margin_line"
        android:layout_marginTop="@dimen/view_margin"
        android:textAlignment="textStart"
        android:id="@+id/tv_desc"
        android:transitionName="tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="Description..."
        android:textColor="@color/adapter_text_sub_title"
        android:textSize="@dimen/text_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/iv_news"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>



















